<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
   
	<navigation-rule>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>create-invoices</from-outcome>
			<to-view-id>/Create_Invoices.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>show-invoices</from-outcome>
			<to-view-id>/Invoices_list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/Create_Invoices.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/Invoices_list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>show-item-page</from-outcome>
			<to-view-id>/itemPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/itemPage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>show-invoices</from-outcome>
			<to-view-id>/Invoices_list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/Invoices_list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>show-item-view</from-outcome>
			<to-view-id>/item_list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/Invoices_list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>show-invoices</from-outcome>
			<to-view-id>/Invoices_list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/itemPage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>show-item-page</from-outcome>
			<to-view-id>/itemPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/Invoices_list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>edit-invoice</from-outcome>
			<to-view-id>/edit_invoice.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/edit_invoice.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<to-view-id>/Invoices_list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
    
</faces-config>
